{
  "name": "memberstack-ai-context",
  "version": "1.0.0",
  "description": "AI context server for Memberstack DOM documentation - provides intelligent access to Memberstack docs for Claude Code, Cursor, and other AI coding assistants",
  "keywords": [
    "memberstack",
    "documentation",
    "mcp",
    "model-context-protocol",
    "ai-assistant",
    "claude-code",
    "cursor",
    "typescript",
    "mcp-server"
  ],
  "homepage": "https://github.com/julianmemberstack/memberstack-ai-context#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/julianmemberstack/memberstack-ai-context.git"
  },
  "bugs": {
    "url": "https://github.com/julianmemberstack/memberstack-ai-context/issues"
  },
  "author": "Julian Galluzzo <julian@memberstack.com>",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "main": "./memberstack-docs-mcp/dist/index.js",
  "scripts": {
    "install": "cd memberstack-docs-mcp && npm install",
    "build": "cd memberstack-docs-mcp && npm run build",
    "setup": "node scripts/setup.js",
    "setup:claude": "node scripts/setup-claude.js",
    "setup:cursor": "node scripts/setup-cursor.js",
    "test": "cd memberstack-docs-mcp && node test-server.js",
    "start": "cd memberstack-docs-mcp && npm start",
    "prepublishOnly": "npm run build"
  },
  "bin": {
    "memberstack-ai-context": "./scripts/cli.js",
    "memberstack-docs-mcp": "./memberstack-docs-mcp/dist/index.js"
  },
  "files": [
    "memberstack-docs-md/**/*.md",
    "memberstack-docs-mcp/dist/**/*",
    "memberstack-docs-mcp/package.json",
    "memberstack-docs-mcp/src/**/*",
    "memberstack-docs-mcp/tsconfig.json",
    "scripts/**/*",
    "README.md",
    "LICENSE"
  ],
  "preferGlobal": true,
  "publishConfig": {
    "access": "public"
  },
  "mcp": {
    "name": "memberstack-docs",
    "description": "Memberstack DOM documentation context server",
    "command": "memberstack-docs-mcp",
    "args": ["$PACKAGE_DIR/memberstack-docs-md"],
    "env": {
      "MEMBERSTACK_DOCS_PATH": "$PACKAGE_DIR/memberstack-docs-md"
    },
    "tools": [
      {
        "name": "search_memberstack_docs",
        "description": "Search through Memberstack documentation"
      },
      {
        "name": "get_method_info", 
        "description": "Get detailed information about a specific Memberstack method"
      },
      {
        "name": "list_methods_by_category",
        "description": "List methods organized by category"
      },
      {
        "name": "get_section_summary",
        "description": "Get a summary of a documentation section"
      },
      {
        "name": "get_code_examples",
        "description": "Get code examples for specific topics"
      }
    ],
    "resources": [
      {
        "uri": "memberstack://docs/*",
        "description": "Memberstack DOM documentation sections"
      }
    ]
  }
}